{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "viewService/*": ["./src/CalculatorViewService/*"],
      "calculatorService/*": ["./src/ExpressionCalculator/*"],
      "mvc/*": ["./src/mvc/*"],
    },
  },
  "include": [
    "**/*.ts",
  ]
}
