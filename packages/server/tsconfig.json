{
  "extends": "../../tsconfig.base.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ESNext",
    "paths": {
      "@/*": ["./src/modules/*"],
      "@/shared/*": ["./src/shared/*"]
    }
  },
  "include": [
    "**/*.ts"
  ]
}
