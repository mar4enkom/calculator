{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "userConfig/*": ["./userConfig/*"],
      "viewService/*": ["./src/CalculatorViewService/*"],
      "calculatorService/*": ["./src/ExpressionCalculator/*"],
      "mvc/*": ["./src/mvc/*"],
      "shared/*": ["./src/shared/*"]
    },
  },
  "exclude": ["node_modules"],
  "include": [
    "**/*.ts",
  ]
}
