{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "include": ["**/*.ts"],
    "exclude": ["node_modules"],
    "baseUrl": ".",
    "paths": {
      "userConfig/*": ["./userConfig/*"],
      "viewService/*": ["./src/CalculatorViewService/*"],
      "calculatorService/*": ["./src/ExpressionCalculator/*"],
      "mvc/*": ["./src/mvc/*"],
      "shared/*": ["./src/shared/*"]
    }
  }
}
