{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "include": ["**/*.ts"],
    "exclude": ["node_modules"],
    "baseUrl": ".",
    "paths": {
      "userConfig/*": ["./userConfig/*"],
      "viewService/*": ["./src/CalculatorViewService/*"],
      "calculatorService/*": ["./src/ExpressionCalculator/*"],
      "mvc/*": ["./src/mvc/*"],
      "shared/*": ["./src/shared/*"]
    }
  }
}
