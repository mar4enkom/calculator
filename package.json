{
  "name": "calculator-monorepo",
  "author": "Mykhailo Marchenko",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "private": true,
  "scripts": {
    "build": "npm run build -w calculator-common && npm run build -w calculator-client && npm run build -w calculator-server",
    "build:client": "npm run build -w calculator-client",
    "build:common": "npm run build -w calculator-common",
    "build:common:watch": "npm run build:watch -w calculator-common",
    "build:server": "npm run build -w calculator-server",

    "start:dev": "concurrently --kill-others \"npm run build:common:watch\" \"npm run start:dev:client\"",
    "start:dev:client": "npm run start:dev -w calculator-client",
    "start:dev:server": "npm run start:dev -w calculator-server",
    "start:server": "npm run start -w calculator-server"
  },
  "workspaces": [
    "./packages/*"
  ]
}